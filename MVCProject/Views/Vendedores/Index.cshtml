@model MVCProject.Models.VendedoresViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <form asp-action="GetByName" method="get">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Pesquisar por nome"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Pesquisar" class="btn btn-primary" />
        </div>
    </form>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendedor in ViewBag.Vendedores)
        {
            <tr>
                <td>
                    @vendedor.Id
                </td>
                <td>
                    @vendedor.Nome
                </td>
                <td>
                    @vendedor.Email
                </td>
                <td>
                    @vendedor.DataNascimento
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=vendedor.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=vendedor.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = vendedor.Id },
                new { onclick = "return confirm('Deseja realmente deletar este contato ?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
