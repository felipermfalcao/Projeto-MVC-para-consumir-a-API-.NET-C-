@model MVCProject.Models.ProdutosViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <form asp-action="GetByName" method="get">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Pesquisar por nome"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Pesquisar" class="btn btn-primary" />
        </div>
    </form>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Quantidade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var produtos in ViewBag.Produtos) {
        <tr>
            <td>
                @produtos.Id
            </td>
            <td>
                @produtos.Nome
            </td>
            <td>
                @produtos.Valor
            </td>
            <td>
                @produtos.Quantidade
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=produtos.Id}) |
                    @Html.ActionLink("Details", "Details", new { id=produtos.Id}) |
                    @Html.ActionLink("Deletar", "Delete", new { id = produtos.Id },
                new { onclick = "return confirm('Deseja realmente deletar este contato ?');" })
            </td>
        </tr>
}
    </tbody>
</table>
